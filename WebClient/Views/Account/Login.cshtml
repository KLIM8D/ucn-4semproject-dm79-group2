@model global::WebClient.Models.LogOnModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Login</h2>
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Login fejlede, skriv dit login igen");
    <fieldset>
        @Html.TextBoxFor(model => model.UserName, null, new { style = "margin: 0px;" })
        @Html.PasswordFor(model => model.Password, new { style = "margin: 0px;" })
        <input class="btn" type="submit" value="Log in" />
    </fieldset>
}