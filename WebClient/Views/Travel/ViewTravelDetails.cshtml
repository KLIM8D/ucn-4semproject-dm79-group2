@using System.Web.Optimization
@model List<Repository.Models.register_travel>

@{
    ViewBag.Title = "ViewTravelDetails";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <h2>ViewTravelDetails</h2>

    <table>
        <tr style="background-color: #fff">
            <td>Start</td>
            <td>Dato</td>
            <td>Slut</td>
            <td>Dato</td>
            <td>Pris</td>
        </tr>
        @{ var rowColor = "#fff"; }
        @for (int i = 0; i < Model.Count; i++)
        {
            var a = Model[i];
            <tr style="background-color:@rowColor">
                <td>
                    @a.transit_locations.tra_loc_title
                </td>
                <td>
                    @a.reg_tra_timestamp.ToString("dd-MM-yy HH:mm")
                </td>
                <td>
                    @Model[i + 1].transit_locations.tra_loc_title
                </td>
                <td>
                    @Model[i + 1].reg_tra_timestamp.ToString("dd-MM-yy HH:mm")
                </td>
                <td>0</td>
            </tr>
            if (@rowColor.Equals("#ffffff"))
            {
                rowColor = "#ffffff";
            }
            else
            {
                rowColor = "#eee";
            }
            i++;
        }
    </table>
    
    <div>
        @Html.ActionLink("Back to Account", "Index", "Account")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}
